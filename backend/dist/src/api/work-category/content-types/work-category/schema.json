{
    "kind": "collectionType",
    "collectionName": "work_categories",
    "info": {
        "singularName": "work-category",
        "pluralName": "work-categories",
        "displayName": "WorkCategory",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "image": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "instruments": {
            "type": "customField",
            "options": [
                "Photoshop:PHOTOSHOP",
                "Clip studio:CLIP_STUDIO",
                "After effects:AFTER_EFFECTS",
                "Ilustrator:ILUSTRATOR",
                "Figma:FIGMA"
            ],
            "customField": "plugin::multi-select.multi-select"
        },
        "works": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::work.work",
            "mappedBy": "workCategory"
        },
        "type": {
            "type": "enumeration",
            "enum": [
                "main",
                "other"
            ]
        },
        "text": {
            "type": "text"
        }
    }
}
